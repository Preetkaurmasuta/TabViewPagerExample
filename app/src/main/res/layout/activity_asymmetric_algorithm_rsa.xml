<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_asymmetric_algorithm_rsa"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.moxdroid.interview.tabviewpagerexample.encryption.AsymmetricAlgorithmRSAActivity">

    <TextView
        android:id="@+id/tvorig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="TextView"
        tools:text="Original"/>

    <TextView
        android:id="@+id/tvencoded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tvorig"
        android:layout_alignRight="@+id/tvorig"
        android:layout_below="@+id/tvorig"
        android:text="TextView"
        tools:text="Encoded"/>

    <TextView
        android:id="@+id/tvdecoded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvencoded"
        android:text="TextView"
        tools:text="Decoded"/>
</RelativeLayout>
